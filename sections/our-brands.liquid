<section class="brands-banner-section">
<div class="row">
    {% if section.settings.title != black %}
    <div class="liner-continer">             
        <h4 class="title"><span class="title-separator"></span> {{section.settings.title}}</h4>         
      </div>
    {% endif %}
    {%- for block in section.blocks -%}
    <div class="col-md-2 brand_block">
        <a href="{{ block.settings.link }}" class="link">
        {% if block.settings.image != blank %}
        {%- assign image = block.settings.image -%}
        {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img src="{{ image | img_url: 'master' }}" data-chksrc="{{ image | img_url: 'master' }}" data-src="{{ img_url }}" data-widths="[100, 150, 288, 360]" data-aspectratio="{{ image.aspect_ratio }}" data-sizes="auto" class="lazyload banner-image desktop-xs" alt="{{ image.alt }}">
        {% endif %}
        </a>
    </div>
    {%- endfor -%}
</div>
</section>
  
  {% schema %}
    {
    "name": "Brands",
        "settings": [
            {
            "type": "text",
            "id": "title",
            "label": "Heading"
            }
        ],
        "blocks": [
          {
            "type": "Brand",
            "name": "Brand",
            "limit": 15,
            "settings": [
              {
                "type": "image_picker",
                "id": "image",
                "label": "Add Brand Logo"
              },
              {
                "type": "url",
                "id": "link",
                "label": "Add brand url"
              }
            ]
          }
        ],
        "presets": [
          {
            "name": "Brands",
            "blocks": [
            {
              "type": "Brand"
            }
          ]
          }
       ]      
    }
  {% endschema %}