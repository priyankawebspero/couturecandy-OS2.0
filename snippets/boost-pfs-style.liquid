{%- comment -%} Boost Library CSS {%- endcomment -%}

{%- if request.page_type == 'collection' or request.page_type == 'search'  -%}
  {{ 'boost-pfs-init.css' | asset_url | stylesheet_tag }}
  <link rel="preload stylesheet" href="{{ 'boost-pfs-general.css' | asset_url }}" as="style">
  <link rel="preload stylesheet" href="{{ 'boost-pfs-otp.css' | asset_url }}" as="style">
{%- else -%}
  <link rel="preload stylesheet" href="{{ 'boost-pfs-instant-search.css' | asset_url }}" as="style">
{%- endif -%}
{{ 'boost-pfs-custom.css' | asset_url | stylesheet_tag }}

{%- assign disableCrawlDataFromBoostOriginal = true %}
{% if disableCrawlDataFromBoostOriginal %}
  {%- capture contentForQuerystring -%}{{ content_for_header }}{%- endcapture -%}
  {%- assign boostPFSPageUrl = contentForQuerystring | split:'"pageurl":"' | last | split:'"' | first | split:'.myshopify.com' | last |
      replace:'\/','/' |
      replace:'%20',' ' |
      replace:'\u0026','&'
  -%}
  {% if boostPFSPageUrl contains 'view=boost-pfs-original' %}
    <meta name="robots" content="noindex, nofollow" />
  {% endif %}
{% endif %}