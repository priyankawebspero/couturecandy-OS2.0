{%- if settings.html_before_footer != blank -%}<div class="basel-prefooter"><div class="container">{{settings.html_before_footer}}</div></div>{%- endif -%}
<footer class="footer-container color-scheme-{{settings.footer_color_scheme}}">
   {%- section 'gl_footer' -%}
  
  {%- if settings.copyrights_text != blank -%}
   <div class="copyrights-wrapper copyrights-{{settings.copyrights_layout}}">
      <div class="container">
        <div class="min-footer" style="border-top: 1px solid rgba(255,255,255,.1);">
            <div class="col-left">{%- if settings.copyrights_text contains 'social_buttons_share' -%}{%- include 'social-sharing', gl_design:'icons-design-default', gl_size:'icons-size-default' -%}{%- elsif settings.copyrights_text contains 'social_buttons_follow' -%}{%- include 'social-sharing', gl_design:'icons-design-default', gl_size:'icons-size-default', follow_social:true -%}{%- else -%}{{settings.copyrights_text}}{%- endif -%}</div>
            {%- if settings.copyrights_next_text != blank -%}
            <div class="col-right">{%- if settings.copyrights_next_text contains 'social_buttons_share' -%}{%- include 'social-sharing', gl_design:'icons-design-default', gl_size:'icons-size-default' -%}{%- elsif settings.copyrights_next_text contains 'social_buttons_follow' -%}{%- include 'social-sharing', gl_design:'icons-design-default', gl_size:'icons-size-default', follow_social:true -%}{%- else -%}{{settings.copyrights_next_text}}{%- endif -%}</div>
            {%- endif -%}
         </div>
      </div>
   </div>
  
   {%- endif -%}
  
 <script>
  $(document).ready(function(){
  $('.moreless-button').click(function () {
    $(this).parent().find('.append-content-custom').slideToggle();
    if ($(this).text() == "Read Less") {
      $(this).text("Read More");
    } else {
      $(this).text("Read Less");
    }
  });
    $('#shopify-section-gl_footer .widget-title').on('click', function(){
      $(this).parent().closest('.footer-column').toggleClass('active');

    })
  });
</script>
  

  
</footer>