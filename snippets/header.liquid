{%- if settings.top_bar_enable and settings.header_design != 'menu-top' -%}
<div class="topbar-wrapp color-scheme-dark">
   <div class="container">
      <div class="topbar-content">
        <div class="top_bar_left col-4">
         {%- if settings.top_bar_text != blank -%}
         <div class="socials">{%- if settings.top_bar_text contains '[social_buttons' -%}{{settings.top_bar_text | split:'[social_buttons' | first }} {% if settings.top_bar_text contains 'social_buttons_share' -%}{%- assign gl_follow_social = false -%}{%- else -%}{%- assign gl_follow_social = true -%}{%- endif -%}{%- include 'social-sharing', gl_design:'icons-design-colored', gl_size:'icons-size-small', follow_social:gl_follow_social -%}{%-else-%}{{settings.top_bar_text}}{%- endif -%}</div>
         {%- endif -%}
          {%- if settings.top_bar_email != blank -%}<div class="top_bar_email"><a href="mailto:{{settings.top_bar_email}}"><i class="fa fa-envelope" aria-hidden="true"></i> Email Us</a></div>{%- endif -%}
        </div>
        <div class="top_bar_middle col-4">
           {%- if settings.top_bar_text_middle != blank -%}<div class="top_bar_text_middle">{{settings.top_bar_text_middle}}</div>{%- endif -%}
        </div>
        <div class="top_bar_right col-4">
          {%- if settings.top_bar_mobile != blank -%}<div class="top_bar_text_middle"><a href="tel:{{settings.top_bar_mobile}}"><i class="fa fa-phone" aria-hidden="true"></i> {{settings.top_bar_mobile}}</a></div>{%- endif -%}
        </div>
      </div>
     <div class="topbar-content mobile">
        <div class="top_bar_left col-4">
         {%- if settings.top_bar_text != blank -%}
         <div class="socials">{%- if settings.top_bar_text contains '[social_buttons' -%}{{settings.top_bar_text | split:'[social_buttons' | first }} {% if settings.top_bar_text contains 'social_buttons_share' -%}{%- assign gl_follow_social = false -%}{%- else -%}{%- assign gl_follow_social = true -%}{%- endif -%}{%- include 'social-sharing', gl_design:'icons-design-colored', gl_size:'icons-size-small', follow_social:gl_follow_social -%}{%-else-%}{{settings.top_bar_text}}{%- endif -%}</div>
         {%- endif -%}
          {%- if settings.top_bar_email != blank -%}<div class="top_bar_email"><a href="mailto:{{settings.top_bar_email}}"><i class="fa fa-envelope" aria-hidden="true"></i></a></div>{%- endif -%}
        </div>
        <div class="top_bar_right col-4">
          {%- if settings.top_bar_mobile != blank -%}<div class="top_bar_text_middle"><a href="tel:{{settings.top_bar_mobile}}"><i class="fa fa-phone" aria-hidden="true"></i></a></div>{%- endif -%}
        </div>
      </div>
   </div>
</div>
<!--END TOP HEADER-->
{%- endif -%}
<!-- HEADER -->
<header class="main-header header-has-no-bg header-{{settings.header_design}} icons-design-{{settings.header_icon_style}} color-scheme-{{settings.header_color_scheme}}">
   {%- assign name_el_header = 'header_' | append:settings.header_design -%}
   {%- include name_el_header -%}
</header>
<!--END MAIN HEADER-->
<div class="clear"></div>

